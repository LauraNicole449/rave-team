---
import Download from "./ui/Download.astro";
---

<section class="text-white flex flex-col justify-end h-[480px] relative">
  <h2
    class="text-section-title font-luckiest-guy text-center lg:text-left pb-6 px-4 lg:px-14"
  >
    JOIN OUR NEWSLETTER
  </h2>
  <form class="flex gap-4 flex-col px-4 lg:flex-row lg:px-14">
    <input
      type="email"
      id="suscribe"
      name="suscribe"
      placeholder="Introduce your email"
      class="border border-white px-[15px] w-full py-3 lg:w-[641px] placeholder:text-[#E1E1E1] font-semibold text-xl bg-[#3B2F45] input-search"
    />
    <button
      type="submit"
      class="bg-white px-[50px] py-4 text-primary font-luckiest-guy self-center text-xl transition duration-150 ease-in-out input-button cursor-pointer"
    >
      SUBSCRIBE
    </button>
  </form>
  <div
    class="flex h-[200px] bg-secondary background-diagonal px-[54px] pb-10 items-end justify-end"
  >
    <a
      href="/docs/PressKit.pdf"
      download
      class="font-luckiest-guy text-4xl border-4 border-white px-5 py-3 flex gap-4 items-center justify-center cursor-pointer transition duration-150 ease-in-out input-button"
    >
      <Download />
      PRESS KIT
    </a>
  </div>
  <img
    src="/images/star-lg.webp"
    alt="star large"
    class="absolute top-[90px] right-[88px]"
  />
  <img
    src="/images/star-md.webp"
    alt="star large"
    class="absolute top-[46px] right-[178px]"
  />
  <img
    src="/images/star-sm.webp"
    alt="star large"
    class="absolute top-[185px] right-[75px]"
  />
</section>

<style>
  .input-search {
    box-shadow: 5px 5px 0 0 #ededed;
    transition:
      box-shadow 0.15s ease-in-out,
      transform 0.15s ease-in-out;
  }

  .input-search:focus {
    transform: none;
    box-shadow: none;
  }

  .input-button {
    box-shadow: 5px 5px 0 0 #ededed;
    transition:
      box-shadow 0.15s ease-in-out,
      transform 0.15s ease-in-out;
  }
  .input-button:hover {
    transform: none;
    box-shadow: none;
  }
</style>
